

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep ".php\{0,1\}$") || true

./vendor/bin/phpstan
if [ $? -ne 0 ]; then
    echo "Opa! Deu ruim aqui com PHPSTAN. Arrume antes de continuar... ðŸ˜‰";
    exit 1;
fi;

# rodar os testes
php artisan test --parallel | php
if [ $? -ne 0 ]; then
    echo "Opa! Deu ruim aqui com algum teste. Arrume antes de continuar... ðŸ˜‰";
    exit 1;
fi;


#Format any file that was altered using Laravel Pint
for FILE in $STAGED_FILES 
do
    vendor/bin/pint "${FILE}";
    git add "${FILE}";
    echo "Arquivo foi formatado";

done;

exit 0;